<%= form_with model: [ @category, @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p div="comment-body">
      <%= form.label :body %><br>
      <%= form.text_area :body, id: 'comment-body' %>
    </p>

    <p>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
  